<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="./src/style.css">
    <title>Patients</title>
</head>
<body>
    <div class="flex flex-col h-screen text-slate-100">
        <nav class="w-full h-[70px] bg-[#7D0A0A]">
            <div class="w-60 h-full inline-flex justify-center items-center gap-10">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class=" hamburger-menu
                size-9 hover:cursor-pointer">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>              
            <h1 class="">Patient Check-in</h1>
            </div>
        </nav>

        <div class="w-full flex-1 flex flex-row">
            <div class="sidebar w-[200px] h-full flex flex-col bg-[#7D0A0A]">
                <div class="flex-1">
                    <a href="/home" class="h-14 flex items-center gap-x-3 hover:bg-[#F3EDC8] hover:text-black"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 ml-2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                    </svg> Home</a>
                </div>

                <a href="/" class="h-14 flex items-center gap-x-3 hover:bg-[#F3EDC8] hover:text-black"><svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 ml-2">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
                    </svg>
                    Log out</a>
            </div>
            <!-- main content -->
            <div class="flex-1 bg-[#BF3131]">
                <h1>Hello Admin</h1>
            </div>
        </div>
    </div>
    <script>
        let valueChecker = true;
        const sidebar = document.querySelector(".sidebar")
        const menu = document.querySelector(".hamburger-menu");
        menu.onclick = () => {
            if (valueChecker) {
                sidebar.classList.add('hidden');
                valueChecker = false;
            } else {
                sidebar.classList.remove('hidden');
                valueChecker = true;
            }
        }
        
    </script>
</body>
</html>